@using BitNews.Areas.Admin.ViewModels.Setting;
@model SettingEditVM

@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5">
    <form method="post" asp-action="Edit">
        <div class="form-group">
            <label for="Key">Key:</label>
            <input asp-for="Key" class="form-control" />
            <span class="text-danger d-block" asp-validation-for="Key"></span>
        </div>
        <div class="form-group">
            <label for="Value">Value:</label>
            <input asp-for="Value" class="form-control" />
            <span class="text-danger d-block" asp-validation-for="Value"></span>
        </div>
        <button type="submit" class="btn btn-success btn-rounded btn-fw mt-3">Submit</button>
        <a asp-action="Index" class="btn btn-primary btn-rounded btn-fw mt-3">Back</a>
    </form>
</div>