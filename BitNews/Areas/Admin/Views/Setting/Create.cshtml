@using BitNews.Areas.Admin.ViewModels.Setting;
@model SettingCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container my-5">
    <h4>Create Setting Table</h4>
    <form method="post" asp-controller="Setting" asp-action="Create">
        <input placeholder="Key" class="form-control my-2" name="Key" asp-for="Key" id="Tag-name">
        <span class="text-danger d-block" asp-validation-for="Key"></span>

        <input placeholder="Value" class="form-control my-2" name="Value" asp-for="Value" id="Tag-name">
        <span class="text-danger d-block" asp-validation-for="Value"></span>

        <button type="submit" class="btn btn-success btn-rounded btn-fw mt-3">Submit</button>
        <a asp-action="Index" class="btn btn-primary btn-rounded btn-fw mt-3">Back</a>
    </form>
</div>