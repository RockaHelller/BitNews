@model SliderEditVM
@{
    ViewData["Title"] = "Edit";
}



<div class="container my-5">
    <div class="slider-image">
        <img src="~/assets/img/Slider/@Model.Image" style="width:500px; height:300px" />
    </div>
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">
            <label for="NewImage">Image:</label>
            <input id="NewImage" style="width: 500px;" asp-for="NewImage" class="form-control" />
            <span asp-validation-for="NewImage" class="text-danger d-block"></span>
        </div>
        <div class="form-group">
            <label for="NewTitle">Title:</label>
            <input id="NewTitle" style="width: 500px;" asp-for="NewTitle" class="form-control" />
            <span asp-validation-for="NewTitle" class="text-danger d-block"></span>
        </div>
        <div class="form-group">
            <label for="NewDesc">Description:</label>
            <input id="NewDesc" style="width: 500px;" asp-for="NewDesc" class="form-control" />
            <span asp-validation-for="NewDesc" class="text-danger d-block"></span>
        </div>

        <button type="submit" class="btn btn-success btn-rounded btn-fw mt-3">Submit</button>
        <a asp-action="Index" class="btn btn-primary btn-rounded btn-fw mt-3">Back</a>
    </form>
</div>