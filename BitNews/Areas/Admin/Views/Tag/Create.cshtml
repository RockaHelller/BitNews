@model TagCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container my-5">
    <form method="post" asp-controller="Tag" asp-action="Create">
        <input class="form-control" placeholder="Tag Name (Max 15 characters)" name="Name" asp-for="Name" id="Tag-name" maxlength="15">
        <span class="text-danger d-block" asp-validation-for="Name"></span>
        <button type="submit" class="btn btn-success btn-rounded btn-fw mt-3">Submit</button>
        <a asp-action="Index" class="btn btn-primary btn-rounded btn-fw mt-3">Back</a>
    </form>
</div>

@section AdminScripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const input = document.getElementById("Tag-name");
            const maxLength = 15;

            input.addEventListener("input", function () {
                const value = this.value;
                if (value.length > maxLength) {
                    this.value = value.slice(0, maxLength);
                }
            });
        });
    </script>
}

