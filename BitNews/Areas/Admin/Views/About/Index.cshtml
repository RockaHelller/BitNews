@using BitNews.Areas.Admin.ViewModels.About;
@model AboutVM
@{
    ViewData["Title"] = "Index";
}

<style>
    .form-style {
        background-color: #f4f4f4;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 10px;
    }

        .form-group label {
            font-weight: bold;
        }

        .form-group span {
            display: block;
            margin-top: 5px;
        }

    .image-preview {
        max-width: 100%;
        height: auto;
        margin-bottom: 15px;
    }

    .form-actions {
        margin-top: 20px;
    }
</style>

<div class="container my-3">
    <div class="form-style">
        <img src="~/assets/img/About/@Model.Image" alt="Image" class="image-preview" />
        <div class="form-group">
            <label>Title:</label>
            <span>@Model.Title</span>
        </div>
        <div class="form-group">
            <label>Description:</label>
            <span>@Model.Description</span>
        </div>
        <div class="form-group">
            <label>Mission:</label>
            <span>@Model.Mission</span>
        </div>
        <div class="form-group">
            <label>What We Do:</label>
            <span>@Model.WhatWeDo</span>
        </div>

        <div class="form-actions">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-rounded btn-fw">Edit</a>
        </div>
    </div>
</div>


