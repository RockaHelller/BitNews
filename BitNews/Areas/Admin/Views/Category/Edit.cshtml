@model EditImageVM

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-2"></div>
    <div class="col-10">
        <div class="container my-5">
            <form method="post" asp-action="Edit" enctype="multipart/form-data">
                <div class="slider-image">
                    <img src="~/assets/img/Category/@Model.Image" style="width:500px; height:300px" />
                </div>
                <div class="form-group">
                    <label for="NewImage">Image:</label>
                    <input type="file" asp-for="NewImage" class="form-control mt-3" />
                    <span asp-validation-for="NewImage" class="text-danger d-block"></span>
                </div>
                <div class="form-group">
                    <label for="Name">Name:</label>
                    <input asp-for="Name" class="form-control" />
                    <span class="text-danger d-block" asp-validation-for="Name"></span>
                </div>
                <button type="submit" class="btn btn-success btn-rounded btn-fw mt-3">Submit</button>
                <a asp-action="Index" class="btn btn-primary btn-rounded btn-fw mt-3">Back</a>
            </form>
        </div>
    </div>
</div>