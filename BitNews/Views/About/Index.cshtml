@model AboutVM

@{
    ViewData["Title"] = "Index";
}

<main class="main oh" id="main">

    <!-- Content -->
    <section class="section-wrap main-content">
        <div class="container">
            <h1 class="page-title h2">@Model.Title</h1>
            <p class="page-subtitle">@Model.Description</p>

            <img src="~/assets/img/About/@Model.Image" alt="">

            <div class="row mt-40">

                <div class="col-md-6 mb-30">
                    <h3 class="h4 mb-20">Our mission</h3>
                    <p>@Model.Mission</p>
                </div>

                <div class="col-md-6">
                    <h3 class="h4 mb-20">What we do</h3>
                    <p>@Model.WhatWeDo</p>
                </div>

            </div> <!-- end row -->

        </div> <!-- end container -->
    </section> <!-- end main content -->


    <div id="back-to-top">
        <a href="#top" aria-label="Go to top"><i class="ui-arrow-up"></i></a>
    </div>

</main>

