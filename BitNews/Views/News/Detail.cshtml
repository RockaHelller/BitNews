@model NewsDetailVM

@{
    ViewData["Title"] = "Detail";
}

<style>
    .comment-body {
        margin-bottom: 0px;
        border-top: 0px;
        border-bottom: 1px solid #E2E1E8;
    }
</style>


<main class="main oh" id="main">

    <!-- Content -->
    <section class="section-wrap main-content">
        <div class="container">
            <div class="row">
                <!-- post content -->
                <div class="col-lg-8 blog-content mb-30">

                    <!-- standard post -->
                    <article class="entry">

                        <div class="single-post-entry-header entry-header">
                            <a href="#" class="entry-meta-category">Investing</a>
                            <h1 class="single-post-entry-title">

                                @foreach (var item in Model.Title)
                                {
                                    @item
                                }
                            </h1>

                            <ul class="entry-meta">
                                <li class="entry-meta-author">
                                    <a href="#">
                                        @*<img src="~/assets/img/blog/author.png" alt="">*@
                                        @*<span>by</span>*@
                                        @*            <span class="entry-meta-author-name">
                                        @Model.CreatorName
                                        </span>*@
                                    </a>
                                </li>
                                <li class="entry-meta-date">
                                    @Model.CreateDate

                                </li>
                            </ul>
                        </div>

                        <div class="entry-img-holder">
                            @foreach (var item in Model.Image)
                            {
                                <img src="~/assets/img/News/@item.Image" alt="" class="entry-img">
                            }
                        </div>

                        <div class="entry-article-wrap">

                            <!-- Share -->
                            <div class="entry-share">
                                <div class="sticky-col">
                                    <div class="socials entry-share-socials">
                                        <a href="#" class="social social-facebook entry-share-social social--colored-facebook">
                                            <i class="ui-facebook"></i>
                                        </a>
                                        <a href="#" class="social social-twitter entry-share-social social--colored-twitter">
                                            <i class="ui-twitter"></i>
                                        </a>
                                        <a href="#" class="social social-google-plus entry-share-social social--colored-google">
                                            <i class="ui-google"></i>
                                        </a>
                                    </div>
                                </div>
                            </div> <!-- share -->

                            <div class="entry-article">
                                <p>
                                    @foreach (var item in Model.Article)
                                    {
                                        @Html.Raw(@item)
                                    }
                                </p>

                                <!-- tags -->
                                <div class="entry-tags">
                                    <span class="entry-tags-label">Tags:</span>
                                    @foreach (var item in Model.NewsTags)
                                    {
                                        <a href="#" rel="tag">@item.Tag.Name</a>
                                    }

                                </div> <!-- end tags -->

                            </div> <!-- end entry article -->

                        </div>

                        <!-- Related Posts -->
                        <div class="related-posts">
                            <h5 class="related-posts-title">You Might Like</h5>
                            <div class="row">
                                @foreach (var item in Model.News.Take(3))
                                {
                                    <div class="col-md-4">
                                        <article class="entry">
                                            <a href="categories.html" class="entry-meta-category">education</a>
                                            <div class="entry-img-holder">
                                                <a asp-controller="News" asp-action="Detail" asp-route-id="@item.Id">
                                                    <div class="thumb-container thumb-60">
                                                        <img src="~/assets/img/News/@item.Images.FirstOrDefault().Image"
                                                             class="entry-img " alt="" />
                                                    </div>
                                                </a>
                                            </div>
                                            <div class="entry-body">
                                                <div class="entry-header">
                                                    <h2 class="entry-title">
                                                        <a asp-controller="News" asp-action="Detail" asp-route-id="@item.Id">@item.Title</a>
                                                    </h2>
                                                </div>
                                            </div>
                                        </article>
                                    </div>
                                }
                            </div>
                        </div> <!-- end related posts -->

                    </article> <!-- end standard post -->
                    <!-- Comments -->
                    <div class="entry-comments mt-30">
                        <h5 class="entry-comments-title">@Model.Comments.Count() Comments</h5>
                        <ul class="comment-list">
                            @foreach (var item in Model.Comments)
                            {
                                <li class="comment">
                                    <div class="comment-body">
                                        <div class="comment-text">
                                            <div class="comment-metadata">
                                                <div class="row">
                                                    <div class="col-10">
                                                        <h5 class="comment-author">@item.Name</h5>
                                                    </div>
                                                    <div class="col-2">
                                                        <a class="comment-date">@Model.CreateDate</a>
                                                    </div>
                                                </div>
                                            </div>
                                            <h5 style="word-wrap: break-word;">
                                                @item.Text
                                            </h5>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>

                    </div> <!-- end comments -->
                    <!-- Comment Form -->
                    <div id="respond" class="comment-respond">
                        <h5 class="comment-respond-title">Post a Comment</h5>
                        <span class="comment-respond-notice">
                            Your email address will not be published. Required fields are
                            marked*
                        </span>
                        <form asp-controller="News" asp-action="PostComment" id="form" class="comment-form" method="post">
                            <div class="row">
                                <div class="col-lg-6">
                                    <label for="Name">Name*</label>
                                    <input asp-for="Name" id="Name" type="text" required>
                                </div>
                            </div>

                            <input hidden asp-for="CreatorName" name="CreatorName" value="@User.Identity.Name" />

                            <p class="comment-form-comment">
                                <label for="Text">Comment*</label>
                                <textarea asp-for="Text" id="Text" rows="6" required="required"></textarea>
                            </p>

                            <p class="comment-form-submit">
                                <input type="hidden" asp-for="Id" name="Id" />
                                <input type="submit" class="btn btn-lg btn-color btn-button" value="Post a Comment" id="submit-message">
                            </p>
                        </form>

                    </div> <!-- end comment form -->

                </div> <!-- end post content -->
                <!-- Sidebar -->
                <aside class="col-lg-4 sidebar sidebar--right widget-setting">

                    <script>!function () { var e = document.getElementsByTagName("script"), t = e[e.length - 1], n = document.createElement("script"); function r() { var e = crCryptocoinPriceWidget.init({ base: "USD,EUR,CNY,GBP", items: "BTC,ETH,LTC,XMR,DASH", backgroundColor: "FFFFFF", streaming: "1", rounded: "1", boxShadow: "1", border: "1" }); t.parentNode.insertBefore(e, t) } n.src = "https://co-in.io/widget/pricelist.js?items=BTC%2CETH%2CLTC%2CXMR%2CDASH", n.async = !0, n.readyState ? n.onreadystatechange = function () { "loaded" != n.readyState && "complete" != n.readyState || (n.onreadystatechange = null, r()) } : n.onload = function () { r() }, t.parentNode.insertBefore(n, null) }();</script>

                    <!-- Widget Socials -->
                    <div class="widget widget-socials my-5">
                        <div class="socials justify-content-center">
                            <a class="social social-facebook" href="#" title="facebook" target="_blank" aria-label="facebook">
                                <i class="ui-facebook"></i>
                            </a>
                            <a class="social social-twitter" href="#" title="twitter" target="_blank" aria-label="twitter">
                                <i class="ui-twitter"></i>
                            </a>
                            <a class="social social-google-plus" href="#" title="google" target="_blank" aria-label="google">
                                <i class="ui-google"></i>
                            </a>
                            <a class="social social-instagram" href="#" title="instagram" target="_blank"
                               aria-label="instagram">
                                <i class="ui-instagram"></i>
                            </a>
                            <a class="social social-youtube" href="#" title="youtube" target="_blank" aria-label="youtube">
                                <i class="ui-youtube"></i>
                            </a>
                            <a class="social social-rss" href="#" title="rss" target="_blank" aria-label="rss">
                                <i class="ui-rss"></i>
                            </a>
                        </div>
                    </div> <!-- end widget socials -->
                    <!-- Widget Newsletter -->
                    <div class="widget widget_modal-input_form_widget">
                        <h4 class="widget-title">Subscribe for News</h4>
                        <form class="modal-input-form" method="post">
                            <div class="modal-input-form-fields">
                                <div class="form-group">
                                    <i class="ui-user"></i>
                                    <input type="text" name="NAME" placeholder="Your name" required="">
                                </div>
                                <div class="form-group">
                                    <i class="ui-email"></i>
                                    <input type="email" name="EMAIL" placeholder="Your email" required="">
                                </div>
                                <input type="submit" class="btn btn-md btn-color" value="Subscribe">
                            </div>
                        </form>
                    </div>

                    <!-- Widget Popular Posts -->
                    <div class="widget widget-popular-posts">
                        <h4 class="widget-title">Popular Posts</h4>

                        <ul class="widget-popular-posts-list">
                            <li class="widget-popular-posts-item">
                                <article>
                                    <div class="widget-popular-posts-entry">
                                        <a href="categories.html" class="entry-meta-category">mining</a>
                                        <h3 class="widget-popular-posts-entry-title">
                                            <a href="single-post.html">Bitcoin Fees: Possible Solutions and Scenarios</a>
                                        </h3>
                                    </div>
                                </article>
                            </li>
                            <li class="widget-popular-posts-item">
                                <article>
                                    <div class="widget-popular-posts-entry">
                                        <a href="categories.html" class="entry-meta-category">mining</a>
                                        <h3 class="widget-popular-posts-entry-title">
                                            <a href="single-post.html">Bitcoin Fees: Possible Solutions and Scenarios</a>
                                        </h3>
                                    </div>
                                </article>
                            </li>
                            <li class="widget-popular-posts-item">
                                <article>
                                    <div class="widget-popular-posts-entry">
                                        <a href="categories.html" class="entry-meta-category">mining</a>
                                        <h3 class="widget-popular-posts-entry-title">
                                            <a href="single-post.html">Bitcoin Fees: Possible Solutions and Scenarios</a>
                                        </h3>
                                    </div>
                                </article>
                            </li>
                        </ul>
                    </div> <!-- end widget popular posts -->

                </aside> <!-- end sidebar -->

            </div> <!-- end row -->
        </div> <!-- end container -->
    </section> <!-- end main content -->

</main> <!-- end main-wrapper -->
