<style>
    .header-widget {
        position: relative;
        display: inline-block;
    }

    .dropdown-menu {
        position: absolute;
        top: 100%;
        left: 50%;
        transform: translateX(-50%);
        display: none;
        background-color: #f9f9f9;
        padding: 8px;
        border: 1px solid #ccc;
        z-index: 1;
    }
    
        .dropdown-menu a {
            display: block;
            padding: 6px 12px;
            text-decoration: none;
            color: #333;
        }

    .header-widget:hover .dropdown-menu {
        display: block;
    }



</style>



<body>
    <div class="loader-mask">
        <div class="loader">
            <div></div>
        </div>
    </div>

    <div class="content-overlay"></div>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="row" style="padding: 15px; background: #002064;">

            <div class="col">
                <div class="date mx-sm-5" id="currentDate">
                </div>
            </div>

            <div class="col text-right mx-5">
                <div class="header-widget">
                    <a class="user-profile-link" title="My Account" asp-controller="Profile" asp-action="Index">
                        <span>@User.Identity.Name</span>
                    </a>
                    <div class="dropdown-menu">
                        <a asp-controller="Account" asp-action="Logout">Logout</a>
                    </div>
                </div>

            </div>
        </div>

    }
    else
    {
        <div class="row" style="padding: 15px; background: #002064;">
            <div class="col">
                <div class="date" id="currentDate">
                </div>
            </div>
            <div class="col text-right">
                <a asp-controller="Account" asp-action="SignIn">Login</a>
                &nbsp;|&nbsp;
                <a asp-controller="Account" asp-action="SignUp">Register</a>
            </div>
        </div>
    }


