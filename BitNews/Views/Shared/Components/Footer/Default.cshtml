@model LayoutVM
<footer class="footer">
    <div class="container">
        <div class="footer-widgets">
            <div class="row justify-content-between">
                <div class="col-lg-4 col-md-6">
                    <div class="widget">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/assets/img/@Model.SettingDatas["Logo"]" class="logo-img" alt="">
                        </a>
                        <p class="mt-20 mb-30">
                            Cryptocurrency news blog and investment strategy guide. All you
                            need to know about ICOs, education, reviews, mining, and more.
                        </p>
                        <div class="socials">
                            <a href="@Model.SettingDatas["Facebook"]" class="social social-facebook" aria-label="facebook">
                                <i class="ui-facebook"></i>
                            </a>
                            <a href="@Model.SettingDatas["Twitter"]" class="social social-twitter" aria-label="twitter">
                                <i class="ui-twitter"></i>
                            </a>
                            <a href="@Model.SettingDatas["Youtube"]" class="social social-youtube" aria-label="youtube">
                                <i class="ui-youtube"></i>
                            </a>
                            <a href="@Model.SettingDatas["Instagram"]" class="social social-instagram" aria-label="instagram">
                                <i class="ui-instagram"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="footer-bottom">
        <div class="container text-center">
            <span class="copyright">
                @Html.Raw(@Model.SettingDatas["CopyRight"])
                <a href="@Model.SettingDatas["CreatorLinkedin"]">
                    @Html.Raw(@Model.SettingDatas["Creator"])
                </a>
            </span>
        </div>
    </div>
</footer>

<div id="back-to-top">
    <a href="#top" aria-label="Go to top"><i class="ui-arrow-up"></i></a>
</div>